import sqlite3

# Anslut till databasen (om den inte finns, skapas den)
conn = sqlite3.connect('music_database.db')
cursor = conn.cursor()

# Skapa tabellen för artister
cursor.execute('''
    CREATE TABLE IF NOT EXISTS Artists (
        artist_id INTEGER PRIMARY KEY AUTOINCREMENT,
        artist_name TEXT NOT NULL
    )
''')

# Skapa tabellen för album med en främmande nyckel till Artists-tabellen
cursor.execute('''
    CREATE TABLE IF NOT EXISTS Albums (
        album_id INTEGER PRIMARY KEY AUTOINCREMENT,
        album_name TEXT NOT NULL,
        artist_id INTEGER,
        FOREIGN KEY (artist_id) REFERENCES Artists(artist_id)
    )
''')

# Spara (commit) ändringar och stäng anslutningen
conn.commit()
conn.close()

print(" Program executed sucessfully")
